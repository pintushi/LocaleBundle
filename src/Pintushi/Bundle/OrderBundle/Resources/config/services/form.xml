<?xml version="1.0" encoding="UTF-8"?>


<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="pintushi.form.type.order.validation_groups" type="collection">
            <parameter>sylius</parameter>
        </parameter>
        <parameter key="pintushi.form.type.order_item.validation_groups" type="collection">
            <parameter>sylius</parameter>
        </parameter>
        <parameter key="pintushi.form.type.cart.validation_groups" type="collection">
            <parameter>sylius</parameter>
        </parameter>
        <parameter key="pintushi.form.type.cart_item.validation_groups" type="collection">
            <parameter>sylius</parameter>
        </parameter>
    </parameters>

    <services>
        <service id="pintushi.form.type.order" class="Pintushi\Bundle\OrderBundle\Form\Type\OrderType">
            <argument>%pintushi.model.order.class%</argument>
            <argument>%pintushi.form.type.order.validation_groups%</argument>
            <tag name="form.type" />
        </service>

        <service id="pintushi.form.type.order_item" class="Pintushi\Bundle\OrderBundle\Form\Type\OrderItemType">
            <argument>%pintushi.model.order_item.class%</argument>
            <argument>%pintushi.form.type.order_item.validation_groups%</argument>
            <argument type="service" id="pintushi.model_transformer.order_item" />
            <tag name="form.type" />
        </service>

        <service id="pintushi.form.type.cart" class="Pintushi\Bundle\OrderBundle\Form\Type\CartType">
            <argument>%pintushi.model.order.class%</argument>
            <argument>%pintushi.form.type.cart.validation_groups%</argument>
            <tag name="form.type" />
        </service>

        <service id="pintushi.form.type.cart_item" class="Pintushi\Bundle\OrderBundle\Form\Type\CartItemType">
            <argument>%pintushi.model.order_item.class%</argument>
            <argument>%pintushi.form.type.cart_item.validation_groups%</argument>
            <argument type="service" id="pintushi.model_transformer.order_item" />
            <tag name="form.type" />
        </service>
    </services>
</container>
