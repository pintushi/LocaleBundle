<?xml version="1.0" encoding="UTF-8" ?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Pintushi\Bundle\OrderBundle\Entity\OrderItem" table="pintushi_order_item">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="quantity" column="quantity" type="integer" />
        <field name="unitPrice" column="unit_price" type="integer" />
        <field name="unitsTotal" column="units_total" type="integer" />
        <field name="adjustmentsTotal" column="adjustments_total" type="integer" />
        <field name="total" column="total" type="integer" />
        <field name="immutable" column="is_immutable" type="boolean" />

        <many-to-one field="order" target-entity="Pintushi\Bundle\OrderBundle\Entity\Order" inversed-by="items">
            <join-column name="order_id" referenced-column-name="id" nullable="false" on-delete="CASCADE" />
        </many-to-one>
        <one-to-many field="adjustments" target-entity="Pintushi\Bundle\OrderBundle\Entity\Adjustment" mapped-by="orderItem" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>
        <field name="servicePrice" column="service_price" type="integer" />
        <many-to-one target-entity="Pintushi\Bundle\MaintenanceBundle\Entity\Service" field="service">
            <join-column name="service_id" referenced-column-name="id" nullable="false" />
        </many-to-one>
        <many-to-one target-entity="Pintushi\Bundle\ProductBundle\Entity\Product" field="product">
            <join-column name="product_id" referenced-column-name="id" nullable="true" />
        </many-to-one>
    </entity>

</doctrine-mapping>
