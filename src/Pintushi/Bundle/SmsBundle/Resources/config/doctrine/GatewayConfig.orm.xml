<?xml version="1.0" encoding="UTF-8"?>


<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="Pintushi\Bundle\SmsBundle\Entity\GatewayConfig" table="pintushi_sms_gateway_config">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="gateway" type="string"  nullable="false"/>
        <field name="configuration" type="array"  nullable="false"/>
        <field name="templates" type="array"  nullable="false"/>
        <field name="priority" type="integer"  nullable="true"/>
        <field name="enabled" column="enabled" type="boolean" nullable="false" />

        <many-to-one target-entity="Pintushi\Bundle\OrganizationBundle\Entity\Organization" field="organization">
            <join-column name="organization_id" referenced-column-name="id" on-delete="SET NULL"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
