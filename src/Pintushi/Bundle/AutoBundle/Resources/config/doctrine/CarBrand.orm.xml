<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Pintushi\Bundle\AutoBundle\Entity\CarBrand"
        repository_class="Pintushi\Bundle\AutoBundle\Repository\CarBrandRepository"
        table="pintushi_auto_brand">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="name" column="name" type="string" length="255" />
        <field name="image" column="image" type="string" nullable="true" length="255" />
        <field name="createdAt" column="created_at" type="datetime" nullable="true" >
            <gedmo:timestampable on="create"/>
        </field>
        <field name="updatedAt" column="updated_at" type="datetime" nullable="true" >
            <gedmo:timestampable on="update"/>
        </field>
        <field name="enabled" column="enabled" type="boolean" />
        <field name="firstLetter" type="string" />

        <one-to-many field="carSeries" target-entity="CarSeries" mapped-by="brand"  >
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>
        <many-to-one field="organization" target-entity="Pintushi\Bundle\OrganizationBundle\Entity\Organization" >
            <join-column name="organization_id" referenced-column-name="id" nullable="false" />
            <cascade>
                <cascade-persist/>
            </cascade>
        </many-to-one>
    </entity>

</doctrine-mapping>
