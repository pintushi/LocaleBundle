<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <mapped-superclass
        name="Pintushi\Bundle\CoreBundle\Entity\Organization"
        table="pintushi_organization"
        >
        <one-to-one field="address" target-entity="Pintushi\Bundle\AddressBundle\Entity\Address" >
            <cascade>
                <cascade-persist/>
            </cascade>
            <join-column name="address_id" referenced-column-name="id" nullable="true" on-delete="SET NULL"/>
        </one-to-one>
         <one-to-many field="shippingMethods" target-entity="Pintushi\Bundle\ShippingBundle\Entity\ShippingMethod"  index-by="type" mapped-by="organization" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>
    </mapped-superclass>
</doctrine-mapping>
