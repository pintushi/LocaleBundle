<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping">
    <entity name="Pintushi\Bundle\PromotionBundle\Entity\Promotion" table="pintushi_promotion">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="name" type="string" />
        <field name="description" type="string" nullable="true" />
        <field name="priority" type="integer">
            <gedmo:sortable-position/>
        </field>
        <field name="exclusive" type="boolean" />
        <field name="usageLimit" column="usage_limit" type="integer" nullable="true" />
        <field name="used" type="integer" />
        <field name="enabled" type="boolean" />
        <field name="couponBased" column="coupon_based" type="boolean" />
        <field name="startsAt" column="starts_at" type="datetime" nullable="true"/>
        <field name="endsAt" column="ends_at" type="datetime" nullable="true"/>
        <field name="createdAt" column="created_at" type="datetime">
            <gedmo:timestampable on="create"/>
        </field>
        <field name="updatedAt" column="updated_at" type="datetime" nullable="true">
            <gedmo:timestampable on="update"/>
        </field>

        <one-to-many field="coupons" target-entity="Pintushi\Bundle\PromotionBundle\Entity\PromotionCoupon" mapped-by="promotion">
            <cascade>
                <cascade-all />
            </cascade>
        </one-to-many>
        <one-to-many field="rules" target-entity="Pintushi\Bundle\PromotionBundle\Entity\PromotionRule" mapped-by="promotion" orphan-removal="true">
            <cascade>
                <cascade-all />
            </cascade>
        </one-to-many>
        <one-to-many field="actions" target-entity="Pintushi\Bundle\PromotionBundle\Entity\PromotionAction" mapped-by="promotion" orphan-removal="true">
            <cascade>
                <cascade-all />
            </cascade>
        </one-to-many>
        <many-to-one field="organization" target-entity="Pintushi\Bundle\OrganizationBundle\Entity\Organization" >
            <join-column name="organization_id" referenced-column-name="id" nullable="false" />
            <cascade>
                <cascade-persist/>
            </cascade>
        </many-to-one>
    </entity>
</doctrine-mapping>
