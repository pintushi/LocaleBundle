<?xml version="1.0" encoding="UTF-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <entity name="Pintushi\Bundle\PromotionBundle\Entity\PromotionAction" table="pintushi_promotion_action">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="type" type="string" />
        <field name="configuration" type="array" />

        <one-to-one field="promotion" target-entity="Pintushi\Bundle\PromotionBundle\Entity\Promotion" inversed-by="action">
            <join-column name="promotion_id" referenced-column-name="id" nullable="true" />
        </one-to-one>
    </entity>

</doctrine-mapping>
