<?xml version="1.0" encoding="UTF-8"?>


<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="Pintushi\Bundle\BlockBundle\Entity\BlockContainer" table="pintushi_blockContainer">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="name" column="name" type="string" />
        <field name="title" column="title" type="string" />

        <one-to-many target-entity="Pintushi\Bundle\BlockBundle\Entity\Block" mapped-by="blockContainer" field="blocks">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>
        <many-to-one target-entity="Pintushi\Bundle\OrganizationBundle\Entity\Organization" field="organization">
            <join-column name="organization_id" referenced-column-name="id" on-delete="SET NULL"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
