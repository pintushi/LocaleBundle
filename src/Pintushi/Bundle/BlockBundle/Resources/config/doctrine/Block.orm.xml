<?xml version="1.0" encoding="UTF-8"?>


<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">
    <entity name="Pintushi\Bundle\BlockBundle\Entity\Block" table="pintushi_block">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="label" type="string"  nullable="true"/>
        <field name="linkUrl" type="string"  nullable="true"/>
        <field name="image" type="string"  nullable="true"/>

        <many-to-one target-entity="Pintushi\Bundle\BlockBundle\Entity\BlockContainer" inversed-by="blocks" field="blockContainer">
            <join-column name="blockContainer_id"  nullable="false" referenced-column-name="id"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
